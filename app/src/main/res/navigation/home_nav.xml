<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.tcoding.albatechnius.ui.fragments.home.pages.HomeFragment"
        android:label="fragment_home"
      />
    <fragment
        android:id="@+id/productFragment"
        android:name="com.tcoding.albatechnius.ui.fragments.home.pages.ProductFragment"
        android:label="fragment_product"
         >
        <action
            android:id="@+id/action_productFragment_to_allProductsFragment"
            app:destination="@id/allProductsFragment" />
    </fragment>
    <fragment
        android:id="@+id/droneInformationFragment"
        android:name="com.tcoding.albatechnius.ui.fragments.home.pages.DroneInformationFragment"
        android:label="fragment_drone_information"
        />
    <fragment
        android:id="@+id/mapsFragment"
        android:name="com.tcoding.albatechnius.ui.fragments.home.pages.MapsFragment"
        android:label="fragment_maps"
        tools:layout="@layout/fragment_maps" />
    <fragment
        android:id="@+id/allProductsFragment"
        android:name="com.tcoding.albatechnius.ui.fragments.home.pages.AllProductsFragment"
        android:label="fragment_all_products"
        tools:layout="@layout/fragment_all_products" />
</navigation>